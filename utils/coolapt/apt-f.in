#!/bin/bash
    . shlib-import cliboot

    RCSID='$Id: - @VERSION@ @DATE@ @TIME@ - $'
    short_opts="idhqv"
    long_opts="install,download,help,quiet,verbose,version"

    listdir=/etc/apt/sources.list.d

    cmd=()
    ncmd=0

function version() {
    parse_id "$RCSID"
    echo "[$BASENAME] Install package from Debian sid"
    echo "Written by Lenik, Version $rcs_rev, Last updated at $rcs_date"
}

function help() {
    version
    echo
    echo "Syntax: "
    echo "    $0 [OPTION] [--] listfile ..."
    echo
    echo "Options: "
    echo "    -i, --install           Install a package (sagi)"
    echo "    -d, --download          Download a package"
    echo "    -q, --quiet             Repeat to get less info"
    echo "    -v, --verbose           Repeat to get more info"
    echo "    -h, --help              Show this help page"
    echo "        --version           Print the version info"
}

function setopt() {
    case "$1" in
        -i|--install)
            cmd[ncmd++]=apt-get
            cmd[ncmd++]=install
            ;;
        -d|--download)
            cmd[ncmd++]=aptitude
            cmd[ncmd++]=download
            ;;
        -h|--help)
            help; exit;;
        -q|--quiet)
            LOGLEVEL=$((LOGLEVEL - 1));;
        -v|--verbose)
            LOGLEVEL=$((LOGLEVEL + 1));;
        --version)
            version; exit;;
        *)
            quit "invalid option: $1";;
    esac
}

function main() {
    if [ -z "$1" ]; then
        echo "listname isn't specified."
        echo "listnames:"
        for f in "$listdir"/*; do
            base="${f##*/}"
            echo "$base"
        done
        return 1
    fi

    listname="$1"
    listfile="$listdir/$listname.list"
    shift

    enfile "$listfile"
    "${cmd[@]}" "$@"
    disfile "$listfile"
}

boot "$@"
