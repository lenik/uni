#!/bin/bash
    : ${RCSID:=$Id: - @VERSION@ @DATE@ @TIME@ - $}
    : ${PROGRAM_TITLE:="The programmer's modify & try tool"}
    : ${PROGRAM_SYNTAX:=[OPTIONS] [--] TYPE FILE ...}

    . shlib-import cliboot
    option -q --quiet       "Repeat to get less info"
    option -v --verbose     "Repeat to get more info"
    option -h --help        "Show this help page"
    option    --version     "Print the version info"

function setopt() {
    case "$1" in
        -h|--help)
            help; exit;;
        -q|--quiet)
            LOGLEVEL=$((LOGLEVEL - 1));;
        -v|--verbose)
            LOGLEVEL=$((LOGLEVEL + 1));;
        --version)
            version; exit;;
        *)
            quit "invalid option: $1";;
    esac
}

function main() {
    type="$1"
    shift
    if [ -z "$type" ]; then
        echo "File type isn't specified." >&2
        exit 1
    fi

    topic="$1"
    shift
    if [ -z "$topic" ]; then
        echo "Topic isn't specified." >&2
        exit 1
    fi

    dir="${topic%/*}"
    base="${topic##*/}"
    if [ "$dir" = "$topic" ]; then
        dir=.
    fi

    ext="${base##*.}"
    if [ "$ext" = "$base" ]; then
        ext=d
        base="$base.d"
    fi
    fpath="$dir/$base"

    echo "Topic File: $fpath"

    # new-$type -f "$fpath"
    new-$type "$fpath"

    # EDITOR..?
    emacs "$fpath" &

    if [ -x "$fpath" ]; then
        onchange -v "$fpath" "$fpath" "$@"
    else
        # Refresh..?
        onchanve -v "$fpath" echo File is changed...
    fi
}

boot "$@"
