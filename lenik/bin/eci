export USER="$ECI_USER"
export USERNAME="$ECI_USER"
export LOGNAME="$ECI_USER"

alias ssh="ssh -i $ECI_ID"
alias scp="scp -i $ECI_ID"
alias sftp="sftp -o \"IdentityFile=$ECI_ID\""

function scp2() {
    local file="$1"
    local remote="$2"
    shift 2
    scp "$file" "$ECI_USER@$ECI_HOST:$remote" "$@"
}

if [ "$1" = "-" ]; then
    ssh "$ECI_USER@$ECI_HOST"
fi
