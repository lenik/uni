#!/bin/bash
    . shlib-import cliboot

    RCSID='$Id: - @VERSION@ @DATE@ @TIME@ - $'
    short_opts="aD:m:hqv"
    long_opts="autover,distribution:,message:,help,quiet,verbose,version"

    autover=
    distribution=unstable
    message=

function version() {
    parse_id "$RCSID"
    echo "[$BASENAME] Increase the debian version in debian/changelog"
    echo "Written by Lenik, Version $rcs_rev, Last updated at $rcs_date"
}

function help() {
    version
    echo
    echo "Syntax: "
    echo "    $0 [OPTION] [--] ..."
    echo
    echo "Options: "
    echo "    -a, --autover           Get version from VERSION.au"
    echo "    -D, --distribution=DIST Set distribution name"
    echo "    -m, --message=MESSAGE   The message shown in new changelog entry"
    echo "    -q, --quiet             Repeat to get less info"
    echo "    -v, --verbose           Repeat to get more info"
    echo "    -h, --help              Show this help page"
    echo "        --version           Print the version info"
}

function setopt() {
    case "$1" in
        -a|--autover)
            autover=1;;
        -D|--distribution)
            distribution="$2";;
        -m|--message)
            message="$2";;
        -h|--help)
            help; exit;;
        -q|--quiet)
            LOGLEVEL=$((LOGLEVEL - 1));;
        -v|--verbose)
            LOGLEVEL=$((LOGLEVEL + 1));;
        --version)
            version; exit;;
        *)
            quit "invalid option: $1";;
    esac
}

function main() {
    err=0

    if [ -f VERSION.av ]; then
        _log1 "Found VERSION.av, enable autover facility. "
        autover=1
    fi

    base="${PWD##*/}"

    if [ -z "$message" ]; then
        if [ -f debian/changelog ]; then
            message="Upstream updates, by xjl-cooldeb"
        else
            message="Debian package initial, by xjl-cooldeb"
        fi
    fi

    if [ ! -f debian/changelog ]; then
        _log1 "Generate a new changelog"
        now=`date -R`
        cat <<EOM >debian/changelog
$base (0.0.1-1) $distribution; urgency=low

  * $message

 -- $DEBFULLNAME <$DEBEMAIL>  $now
EOM
    fi

    if [ "$autover" = 1 ]; then
        # symlink doesn't work for dch, which use abs path always.
        # pushd /tmp >/dev/null
        # ln -s "$src" $base
        # popd >/dev/null

        pushd .. >/dev/null

            dir_ver=`dir-ver $base`
            cd "$dir_ver"
    fi

    if ! dch -D $distribution --force-distribution -d "$message"; then
        echo "Failed to add changelog entry. " >&2
        err=1
    fi

    if [ "$autover" = 1 ]; then
            cd ..
            dir-nover "$dir_ver"

        popd
    fi

    return $err
}

boot "$@"
