#!/bin/bash
    : ${RCSID:=$Id: - @VERSION@ @DATE@ @TIME@ - $}
    : ${PROGRAM_TITLE:=Shendun execfilter config poller}
    : ${PROGRAM_SYNTAX:=[OPTIONS] [--] ...}

    . shlib-import cliboot
    option -q --quiet       "Repeat to get less info"
    option -v --verbose     "Repeat to get more info"
    option -h --help        "Show this help page"
    option    --version     "Print the version info"

    start_url=

function setopt() {
    case "$1" in
        -h|--help)
            help; exit;;
        -q|--quiet)
            LOGLEVEL=$((LOGLEVEL - 1));;
        -v|--verbose)
            LOGLEVEL=$((LOGLEVEL + 1));;
        --version)
            version; exit;;
        *)
            quit "invalid option: $1";;
    esac
}

function main() {

    read srv_url_enc < <(wget -qO- "$start_url")

    if [ -n "$srv_url" ]; then
        log_fail "Failed to query from $srv_url"
    fi

    srv_url=$(yw64dec "$srv_url_enc")
    _log2 "Server URL: $srv_url"
}

function yw64enc() {
    tmp=`tempfile`
    echo "$@" >$tmp
    yangwei -e $tmp | base64 -e
}

function yw64dec() {
    tmp=`tempfile`
    echo "$@" | base64 -d >$tmp
    yangwei -d $tmp
    rm -f $tmp
}

boot "$@"
