#!/bin/bash
    : ${RCSID:=$Id: - @VERSION@ @DATE@ @TIME@ - $}
    : ${PROGRAM_TITLE:="Config search domain names"}
    : ${PROGRAM_SYNTAX:="[OPTIONS] [--] ..."}

    . shlib-import cliboot
    option -a --add =DOMAIN "Add DOMAIN to search list"
    option -d --delete =DOMAIN "Remove DOMAIN from search list"
    option -A --all         "Config as much as possible"
    option -r --resolv-conf "Config resolv-conf only"
    option -c --system-conns "Config NetworkManager system-conns"
    option -q --quiet       "Repeat to get less info"
    option -v --verbose     "Repeat to get more info"
    option -h --help        "Show this help page"
    option    --version     "Print the version info"

    add=()
    delete=()

    auto=1
    resolv_conf=
    system_conns=

    sysconfdir="@sysconfdir@"
    sysconfdir="${sysconfdir:-/etc}"

function setopt() {
    case "$1" in
        -a|--all)
            auto=
            resolv_conf=1
            system_conns=1
            ;;
        -r|--resolv-conf)
            auto=
            resolv_conf=1;;
        -c|--system-conns)
            auto=
            system_conns=1;;
        -a|--add)
            add[${#add[@]}]="$2";;
        -d|--delete)
            delete[${#delete[@]}]="$2";;
        -h|--help)
            help; exit;;
        -q|--quiet)
            LOGLEVEL=$((LOGLEVEL - 1));;
        -v|--verbose)
            LOGLEVEL=$((LOGLEVEL + 1));;
        --version)
            version; exit;;
        *)
            quit "invalid option: $1";;
    esac
}

function main() {
    if [ "$auto" = 1 ]; then
        resolv_conf=1
    fi

    TAB=`echo -e '\t'`
    SPC="[ $TAB]+"

    del_re=
    for d in "${delete[@]}"; do
        if [ -n "$del_re" ]; then
            del_re="$del_re|${d//./\.}"
        fi
    done

    if [ "$resolv_conf" = 1 ]; then
        if [ -n "$del_re" ]; then
            sedit -m "resolv.conf -$del_re" $sysconfdir/resolv.conf \
                grep -v "^${SPC}search$SPC($del_re)\$"
        fi
        for a in "${add[@]}"; do
            echo "resolv.conf +search $a"
            echo "search $a" >>$sysconfdir/resolv.conf
        done
    fi

}

boot "$@"
