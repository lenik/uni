#!/bin/bash
    : ${RCSID:=$Id: - @VERSION@ @DATE@ @TIME@ - $}
    : ${PROGRAM_TITLE:="Stat count by grep patterns"}
    : ${PROGRAM_SYNTAX:="[OPTIONS] [--] [statkey=]pattern ..."}

    . shlib-import cliboot
    option -q --quiet
    option -v --verbose
    option -h --help
    option    --version

function setopt() {
    case "$1" in
        -h|--help)
            help $1; exit;;
        -q|--quiet)
            LOGLEVEL=$((LOGLEVEL - 1));;
        -v|--verbose)
            LOGLEVEL=$((LOGLEVEL + 1));;
        --version)
            version; exit;;
        *)
            quit "invalid option: $1";;
    esac
}

function main() {
    local file=$TEMP/grepstat-$$.$RANDOM
    local key pattern
    local lines words chars
    cat >$file
    for k in "$@"; do
        if [ "$k" = "${k/=}" ]; then
            key="$k"
            pattern="$k"
        else
            key="${k%%=*}"
            pattern="${k#*=}"
        fi
        #echo "Key $key: [$pattern]"
        #eval stat_$key=`grep -acP "$pattern" $file`
        echo stat_$key=`grep -acE "$pattern" $file`
            #grep -aP "$pattern" $file | wc >$file.1
            #read lines words chars <$file.1
            #eval $key=$lines
            #echo $key=${!key}
    done
    rm -f "$file"
}

boot "$@"
