
old format:
    -- FileHeaderInfo: 0
    FOURCC magic                0
    FOURCC type
    DWORD headerSize
    DWORD crc
    QWORD nextHeaderOffset      10
    DWORD reserverd[2]

    -- +20
    BYTE ver[2] = major, minor
    WORD reserved
    DWORD fileBlocks
    DWORD headerBlocks
    DWORD dataBlocks

    -- +30
    DWORD algorithm
    BYTE drive
    BYTE mountFlags (bool, isMounted?)
    QWORD uniqSessionId
    BYTE reserved[54]

new format:
    -- OnDiskHeaderInfo
    FOURCC magic
    FOURCC type
    DWORD hdrsize
    DWORD crc
    QWORD nextheader
    DWORD reserved[2]

    -- +20
    BYTE ver[2]         "6.0"
    WORD reserved
    QWORD fileBlocks        400008
    QWORD headerBlocks      4
    QWORD dataBlocks        400000
    DWORD alg           5 (AES-256)

    -- +40
    BYTE passphraseSalt[16]

    -- +50
    DWORD flags {           0
        isBeingReEncrypted
        isWiped
        usesCustomTimeout
        unused[2]
        isSpase
        unused[28]
    }

    DWORD customTimeout     0
    QWORD blocksReEncrypted 0
    UTF8  defaultRoot[256]  ...
}
