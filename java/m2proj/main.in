#!/bin/bash
    : ${RCSID:=$Id: - @VERSION@ @DATE@ @TIME@ - $}
    : ${PACKAGE:=@PACKAGE@}
    : ${PROGRAM_TITLE:=}
    : ${PROGRAM_SYNTAX:=[OPTIONS] [--] ...}

    : ${JAVA:=java}

    # The encoding can be 'ANSI_X3.4-1968' when not specified.
    : ${JAVAOPTS:=-ea -Dsun.jnu.encoding=utf-8 -Dfile.encoding=utf-8}

    . shlib-import cliboot
    option -d --debug       "Enable debug mode"
    option -p --port =PORT  "Specify debug (JDWP) port, default 8000"
    option -t --time        "Measure run time"
    option -O --java-opt =STR "Add java option, eg. -O -Dfoo=bar or -O-Dfoo=bar"
    option -q --quiet
    option -v --verbose
    option -h --help
    option    --version

    opt_orderfile=order.lst
    opt_debug=
    opt_port=8000
    opt_time=
    opt_javaopts=()

    shopt -s nullglob

function setopt() {
    case "$1" in
        -d|--debug)
            opt_debug=1;;
        -p|--jdwp-port)
            opt_port=$2;;
        -t|--time)
            opt_time=1;;
        -O|--java-opt)
            opt_javaopts=("${opt_javaopts[@]}" "$2");;
        -h|--help)
            help $1; exit;;
        -q|--quiet)
            LOGLEVEL=$((LOGLEVEL - 1));;
        -v|--verbose)
            LOGLEVEL=$((LOGLEVEL + 1));;
        --version)
            show_version; exit;;
        *)
            quit "invalid option: $1";;
    esac
}

function main() {
    if [ -z "$1" ]; then
        echo "App isn't specified." >&2
        exit 1
    fi
    name=$1
    shift

    if [ "$opt_debug" = 1 ]; then
        JDWPOPTS="transport=dt_socket"
        JDWPOPTS="$JDWPOPTS,address=$opt_port"
        JDWPOPTS="$JDWPOPTS,server=y"
        #JDWPOPTS="$JDWPOPTS,suspend=y"

        JAVAOPTS="$JAVAOPTS -Xdebug"
        JAVAOPTS="$JAVAOPTS -Xrunjdwp:$JDWPOPTS"
        #JAVAOPTS="$JAVAOPTS -agentlib:jdwp=$JDWPOPTS"
    fi

    for jo in "${opt_javaopts[@]}"; do
        JAVAOPTS="$JAVAOPTS $jo"
    done

    appcls=()
    for a in $(find target/classes -iname "$name.class"); do
        a="${a[0]}"
        a=${a#target/classes/}
        a=${a%.class}
        a=${a//\//.}
        appcls=( "${appcls[@]}" "$a" )
    done

    n=${#appcls[@]}
    if [ $n != 1 ]; then
        if [ $n = 0 ]; then
            echo "No such app: $app" >&2
        else
            echo "Name ambiguous:" >&2
            for a in "${appcls[@]}"; do
                echo "    $a" >&2
            done
        fi
        exit 1
    fi

    classpath=
    if [ -f "$opt_orderfile" ]; then
        while read item; do
            add_cp "$item"
        done <"$opt_orderfile"
    else
        for dir in classes/*/; do
            add_cp "$dir"
        done
        for jar in lib/*.jar; do
            add_cp "$jar"
        done
    fi
    add_cp target/classes
    add_cp target/test-classes
    classpath="${classpath#:}"

    TIME=
    if [ "$opt_time" = 1 ]; then TIME=do_time; fi

    _log2 "Execute:$TIME $JAVA $JAVAOPTS -cp ... $appcls $*"
    eval $TIME $JAVA $JAVAOPTS -cp "$classpath" "$appcls" "$@"
}

function do_time() {
    time "$@"
}

function add_cp() {
    local a
    for a in "$@"; do
        _log2 "Classpath: $a"
        classpath="$classpath:$a"
    done
}

boot "$@"

