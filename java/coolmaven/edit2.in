#!/bin/bash
    . shlib-import cliboot

    RCSID='$Id: - @VERSION@ @DATE@ @TIME@ - $'
    short_opts="hqv"
    long_opts="help,quiet,verbose,version"

function version() {
    parse_id "$RCSID"
    echo "[$BASENAME] Edit resources in both src & target dirs"
    echo "Written by Lenik, Version $rcs_rev, Last updated at $rcs_date"
}

function help() {
    version
    echo
    echo "Syntax: "
    echo "    $0 [OPTION] [--] FILES"
    echo
    echo "Options: "
    echo "    -q, --quiet             Repeat to get less info"
    echo "    -v, --verbose           Repeat to get more info"
    echo "    -h, --help              Show this help page"
    echo "        --version           Print the version info"
}

function setopt() {
    case "$1" in
        -h|--help)
            help; exit;;
        -q|--quiet)
            LOGLEVEL=$((LOGLEVEL - 1));;
        -v|--verbose)
            LOGLEVEL=$((LOGLEVEL + 1));;
        --version)
            version; exit;;
        *)
            quit "invalid option: $1";;
    esac
}

function main() {
    for file in "$@"; do
        case "$file" in
            src/main/resources/*)
                dst="target/classes/${file#src/main/resources/}";;
            src/test/resources/*)
                dst="target/test-classes/${file#src/test/resources/}";;
            *)
                file=`readlink -f "$file"`
                dst="$file"
                dst="${dst/src\/main\/resources\//target/classes/}"
                dst="${dst/src\/main\/resources\//target/classes/}"
                if [ "$file" = "$dst" ]; then
                    _warn "[Skipped] Not a maven resource? Source: $file"
                    continue
                fi
        esac
        _log1 "Edit $file and $dst"
        ifedit "$file" cp "$file" "$dst"
    done
}

boot "$@"
