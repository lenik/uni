#!/usr/bin/perl

=head1 NAME

strwrap - String Literals Wrapper

=cut
use strict;
use vars qw($LOGNAME $LOGLEVEL);
    $LOGNAME    = 'strwrap'; # $0 =~ /([^\/\\.]+)(?:\.\w+)*$/;
use cmt::log(2);
use cmt::util('addslashes', 'stripslashes');
use cmt::vcs('parse_id');
    my %RCSID   = parse_id('$Id: .pl,v 1.16 2007-09-29 11:31:33 lenik Exp $');
use Getopt::Long;

sub _main; sub _version; sub _help;

our $opt_style      = 'php';            # default
our $opt_bufname    = 'strbuf';
our $opt_indent     = '    ';

our @opt_repls;
our $opts_vprefix   = '$';              # var prefix
our $opts_stend     = ";\n";            # statement end
our $opts_cbegin    = qr/<\?(php)?/;    # cdata begin
our $opts_cend      = qr/\?>/;          # cdata end
our $opts_cdataprep = \&php_cdataprep;  # cdata prepare function
our $opts_escape    = \&c_slashes;      # escaping function
our $opts_unescape  = \&c_unslashes;    # unescaping function

<% fskd fdslk jsak %>
sub _boot {
    GetOptions('quiet|q'        => sub { $LOGLEVEL-- },
               'verbose|v'      => sub { $LOGLEVEL++ },
               'version'        => sub { _version; exit 0 },
               'help|h'         => sub { _help; exit 0 },
               'style|s=s',
               'bufname|b',
               'repls'          => \@opt_repls,
               'indent',
               );
    if ('php' eq $opt_style) {
        # push @opt_repls, ['default', 'replaces' ];
    } elsif ('jsp' eq $opt_style) {
        push @opt_repls, (
            [ 'out\.println',   $
    _main;
}

=head1 SYNOPSIS

B<strwrap>
    S<[ B<-q> | B<--quiet> ]>
    S<[ B<-v> | B<--verbose> ]>
    S<[ B<-h> | B<--help> ]>
    S<[ B<--version> ]>
    S<[ B<--> ]>
    S<[ I<...the rest of arguments...> ]>

=head1 DESCRIPTION

B<strwrap> is a WHAT used for WHAT. It HOW-WORKS.

BACKGROUND-PROBLEM.

HOW-strwrap-RESOLVES.

=head1 OPTIONS

=over 8

=item B<-m> | B<--my-option>

...

=item B<-q> | B<--quiet>

Repeat this option to suppress unimportant information to display.

=item B<-v> | B<--verbose>

Repeat this option to display more detailed information.

=item B<-h> | B<--help>

Display a breif help page and exit(0).

=item B<--version>

Display a short version information and exit(0).

=back

=head1 ENVIRONMENT

=over 8

=item TEMP, TMP

TEMP(or TMP, if $TEMP directory isn't existed) directory used to create
temporary files.

=back

=cut
sub _help {
    &_version;
    print "\nSyntax: \n    $0 [OPTION] [--] ...\n", <<'EOM';

Common options:
    -q, --quiet             repeat to get less info
    -v, --verbose           repeat to get more info
    -h, --help              show this help page
        --version           print the version info
EOM
}

exit (_boot or 0);

sub _main {
    _sig1 'ARG', $_ for @ARGV;
    _log1 "TODO...";
}

=head1 DIAGNOSTICS

(No Information)

=cut
# (HELPER FUNCTIONS)

=head1 HACKING

(No Information)

=cut
# (MODULE FUNCTIONS)
sub php_cdataprep {
    local $_ = shift;
    s/echo\b/$opt_vprefix$opt_bufname .= /g;
    $_
}

sub jsp_cdataprep {
    local $_ = shift;
    s/out\.println\((.*?)\)\s*;/$opt_vprefix$opt_bufname.append($1 + "\n");/g;
    s/out\.print\b/$opt_vprefix$opt_bufname.append/g;
    $_
}

=head1 HISTORY

=over

=item 0.x

The initial version.

=back

=cut
sub _version {
    print "[$LOGNAME] String Literals Wrapper \n";
    print "Written by Lenik,  Version 0.$RCSID{rev},  Last updated at $RCSID{date}\n";
}

