
# loadpaths PATHFILES
function loadpaths() {
    local pathfile
    shopt -s nullglob
    for pathfile in $*; do
        name=PATH_${pathfile##*/}
        unset $name
        while read p; do
            eval $name="${!name}:$p"
        done <$pathfile
    done
    eval $name="${!name:1}"
}

loadpaths /lapiota/etc/paths/* $HOME/etc/paths/*
unset loadpaths

# findonce VAR PATH WILDCARDS
function findonce() {
    local var="$1"
    local pathv="$2"
    shift 2

    unset $var
    while [ $# -gt 0 ]; do
        for p in ${pathv//:/ }; do
            for wilds in "$1"; do
                for f in $p/$wilds; do
                    if [ -f "$f" ]; then
                        eval $var="\"$f\""
                        return 0
                    fi
                done
            done
        done
        shift
    done
    return 1
}

# mountpgp
function mountpgp() {
    local fstab ext
    for fstab in /etc/fstab* /lapiota/etc/fstab* $HOME/etc/fstab*; do
        if [ "${fstab/.}" != "$fstab" ]; then
            ext="${fstab##*.}"
        else
            ext=
        fi
        mount.pgp.bat "`cygpath -w $pgpimage`" "$mpoint"
        if [ -d "$mpoint/etc/startup.d" ]; then
            for f in $mpoint/etc/startup.d/*; do
                . "$f"
            done
        fi
    done
}
