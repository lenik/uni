#!/bin/bash
    . shlib-import cliboot

    RCSID='$Id: - @VERSION@ @DATE@ @TIME@ - $'
    short_opts="hqv"
    long_opts="help,quiet,verbose,version"

    index=0

function version() {
    parse_id "$RCSID"
    echo "[$BASENAME] AutoBuild on Change: pslatex/pdf"
    echo "Written by Lenik, Version $rcs_rev, Last updated at $rcs_date"
}

function help() {
    version
    echo
    echo "Syntax: "
    echo "    $0 [OPTION] [--] FILE.tex"
    echo
    echo "Options: "
    echo "    -q, --quiet             Repeat to get less info"
    echo "    -v, --verbose           Repeat to get more info"
    echo "    -h, --help              Show this help page"
    echo "        --version           Print the version info"
}

function setopt() {
    case "$1" in
        -h|--help)
            help; exit;;
        -q|--quiet)
            LOGLEVEL=$((LOGLEVEL - 1));;
        -v|--verbose)
            LOGLEVEL=$((LOGLEVEL + 1));;
        --version)
            version; exit;;
        *)
            quit "invalid option: $1";;
    esac
}

function main() {
    if [ "$#" = 0 ]; then
        quit ".tex file isn't specified."
    fi

    file="$1"
    base="${file%.tex}"

    while [ -r "$file" ]; do
        _log2 "pslatex $base -> $base.dvi"
        pslatex '\nonstopmode \input $base'

        _log2 "dvips/ps2pdf $base.dvi -> $base.pdf"
        dvips "$base.dvi"
        ps2pdf "$base.ps"

        _log1 "[$((++index))] Waiting for next change"
        until-changed "$file"
    done
}

boot "$@"
