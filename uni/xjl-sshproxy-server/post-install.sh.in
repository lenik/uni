#!/bin/sh

# master-file

echo "Create user sshproxy"

    useradd \
        -md @homedir@ \
        -s /bin/sh \
        -rc "SSH forwarder" \
        sshproxy

echo "Config authorized_keys permission"
    authkeys=@homedir@/.ssh/authorized_keys

    chmod 600 $authkeys
    chown sshproxy:sshproxy $authkeys
