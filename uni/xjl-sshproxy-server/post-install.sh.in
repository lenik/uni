#!/bin/sh

# master-file

echo "Create user sshproxy"

    # clean if empty dir already created.
    rmdir @sshconfdir@ @homedir@ 2>/dev/null

    useradd \
        -md @homedir@ \
        -s /bin/sh \
        -rc "SSH forwarder" \
        sshproxy

echo "Config authorized_keys permission"

    install -m 600 -o sshproxy -g sshproxy \
        @setupdir@/authorized_keys @sshconfdir@/
