#!/bin/bash
    . shlib-import cliboot

    RCSID='$Id: bash.sh 1853 2010-09-29 01:35:59Z lenik $'
    short_opts="s:a:hqv"
    long_opts="server,api,help,quiet,verbose,version"

    API_1_7="/service/local/data_index?q=%s&collapseresults=true"
    API_1_8="/service/local/lucene/search?q=%s&collapseresults=true"
    XSL_NG2TXT=@pkgdatadir@/ng2txt.xsl

    server=
    api=1.8

function version() {
    parse_id "$RCSID"
    echo "[$BASENAME] M2search Nexus driver"
    echo "Written by Lenik, Version 0.$rcs_rev, Last updated at $rcs_date"
}

function help() {
    version
    echo
    echo "Syntax: "
    echo "    $0 [OPTION] [--] ..."
    echo
    echo "Options: "
    echo "    -s, --server=SERVER     Nexus http server URL to use"
    echo "    -a, --api=VERSION       Specify nexus api version, default 1.8"
    echo "    -q, --quiet             Repeat to get less info"
    echo "    -v, --verbose           Repeat to get more info"
    echo "    -h, --help              Show this help page"
    echo "        --version           Print the version info"
}

function setopt() {
    case "$1" in
        -s|--server)
            server=$2;;
        -a|--api)
            api=$2;;
        -h|--help)
            help; exit;;
        -q|--quiet)
            LOGLEVEL=$((LOGLEVEL - 1));;
        -v|--verbose)
            LOGLEVEL=$((LOGLEVEL + 1));;
        --version)
            version; exit;;
        *)
            quit "invalid option: $1";;
    esac
}

function main() {
    if [ -z "$server" ]; then
        echo "Server isn't specified. "
        exit 1
    fi

    api=${api//[^a-z0-9]/_}
    api_var=API_$api
    api="${!api_var}"

    err=0
    tmp=`tempfile`
    for query in "$@"; do
        url=`printf "$server$api" "$query"`
        _log2 "Query $url"
        if wget -qO$tmp "$url"; then
            xalan -in $tmp -xsl "$XSL_NG2TXT"
        else
            echo "Fetch from $server failed. "
            err=1
        fi
    done
    rm -f $tmp
    return $err
}

boot "$@"
