#!/bin/sh

# master-file

echo "Add user sshproxy"

    # homedir should be created.
    useradd \
        -d @homedir@ \
        -s  /bin/sh \
        -rc "SSH SOCKS Proxy" \
        sshproxy

echo "Config key permission"

    chown -R sshproxy:sshproxy @sshconfdir@
    chmod 700 @sshconfdir@
    chmod 600 @sshconfdir@/id_rsa

exit 0
