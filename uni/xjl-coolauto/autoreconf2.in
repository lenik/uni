#!/bin/bash

# master-file

set -e

# handle of -i, -s, etc.
opt_addmissing=
opt_addsym=

for a in "$@"; do
    if [ "${a:0:1}" = '-' ]; then
        a="${a#-}"
        while [ -n "$a" ]; do
            case "${a:0:1}" in
                i) opt_addmissing=1;;
                s) opt_addsym=1;;
            esac
            a="${a:1}"
        done
    fi
done

# The possibility of symlinks we will have
    symlike=0
    for f in missing install-sh; do
        if [ ! -e $f ] || [ -h $f ]; then
            symlike=$((symlike + 1))
        fi
    done
    if [ $symlike = 0 ]; then
        opt_addsym=
    fi

if [ "$opt_addmissing" = 1 ]; then
    if [ "$opt_addsym" = 1 ]; then
        if [ ! -d libauto ]; then
            ln -s @pkgdatadir@/libauto libauto
        fi
    else
        # always update libauto, if it's not symlink
        cp -RT @pkgdatadir@/libauto libauto
    fi
fi

autoreconf "$@"
