#!/bin/sh

# master-file

echo "Add user sshproxy"

    # homedir should be created.
    useradd \
        -d @homedir@ \
        -s  /bin/sh \
        -rc "SSH SOCKS Proxy" \
        sshproxy

echo "Config key permission"

    install -m 0600 -o sshproxy -g sshproxy \
        @setupdir@/id_rsa @sshconfdir@/

exit 0
