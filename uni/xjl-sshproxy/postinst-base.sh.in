#!/bin/sh

# master-file

echo "Create user sshproxy"

    # clean if empty dir already created.
    rmdir @sshconfdir@ @homedir@ 2>/dev/null

    useradd \
        -md @homedir@ \
        -s /bin/bash \
        -rc "SSH forwarder" \
        sshproxy

echo "Prepare .ssh dir"
    install -d -m 0600 -o sshproxy -g sshproxy @sshconfdir@

