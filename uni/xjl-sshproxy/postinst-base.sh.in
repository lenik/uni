#!/bin/sh

# master-file

echo "Create user sshproxy"

    # clean if empty dir already created.
    rmdir @sshconfdir@ @homedir@ 2>/dev/null

    useradd \
        -md @homedir@ \
        -s /bin/false \
        -rc "SSH forwarder" \
        sshproxy

echo "Set permission of @sshconfdir@"
    install -d -m 0700 -o sshproxy -g sshproxy @sshconfdir@

