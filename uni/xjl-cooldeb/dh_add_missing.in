#!/bin/bash
    . shlib-import cliboot

    RCSID='$Id: bash.sh 1710 2010-09-18 16:36:30Z lenik $'
    short_opts="shqv"
    long_opts="symlink,help,quiet,verbose,version"

    symlink=0

function version() {
    parse_id "$RCSID"
    echo "[$BASENAME] Add missing debian files"
    echo "Written by Lenik, Version 0.$rcs_rev, Last updated at $rcs_date"
}

function help() {
    version
    echo
    echo "Syntax: "
    echo "    $0 [OPTION] [--] ..."
    echo
    echo "Options: "
    echo "    -s, --symlink           add symlinks instead of copy"
    echo "    -q, --quiet             repeat to get less info"
    echo "    -v, --verbose           repeat to get more info"
    echo "    -h, --help              show this help page"
    echo "        --version           print the version info"
}

function setopt() {
    case "$1" in
        -s|--symlink)
            symlink=1;;
        -h|--help)
            help; exit;;
        -q|--quiet)
            LOGLEVEL=$((LOGLEVEL - 1));;
        -v|--verbose)
            LOGLEVEL=$((LOGLEVEL + 1));;
        --version)
            version; exit;;
        *)
            quit "invalid option: $1";;
    esac
}

function main() {
    if [ -z "$1" ]; then
        debiandir=debian
    else
        debiandir="$1"
    fi
    debiandir="${debiandir%/}"
    if ! cd "$debiandir"; then
        echo "Failed to enter $debiandir"
        exit 1
    fi

    if [ ! -f control ]; then
        echo "No control found. "
        exit 1
    fi

    SOURCE_NAME=
    while read s_p name; do
        if [ "$s_p" = 'Source:' ]; then
            SOURCE_NAME=$name
            continue
        else
            PACKAGE_NAME=$name
            if [ "$PACKAGE_NAME" = "$SOURCE_NAME" ]; then
                dprefix=
                csuffix=
            else
                dprefix=$PACKAGE_NAME.
                csuffix=-$PACKAGE_NAME
            fi

            for st in postinst prerm; do
                tmplfile=@DESTDIR@@pkgdatadir@/$st.def
                dfile=$dprefix$st
                cfile=../$st$csuffix
                outfile=

                # Ignore if pre/post script exists
                if [ -f $dfile ]; then continue; fi

                # Ignore if pre/post isn't implemented.
                if [ ! -f $cfile ] && [ ! -f $cfile.in ]; then
                    continue
                fi

                _log1 "Generate pre/post script debian/$outfile"
                sed \
                    -e 's,[@]PACKAGE_NAME[@],$PACKAGE_NAME,g' \
                    <$tmplfile >$dfile
                chmod --reference=$tmplfile $dfile
            done
        fi
    done < <(grep -E '^Source:|Package:' control)

    for defl in @DESTDIR@@debdefldir@/*; do

        basename=${defl##*/}

        if [ ! -f "$basename" ]; then
            _log1 "Generate $basename"

            if [ $symlink = 1 ]; then
                if ! ln -snf $defl $basename; then
                    echo "  failed to create symlink $basename -> $defl"
                    exit 1
                fi
            else
                if ! cp $defl $basename; then
                    echo "  failed to copy $defl"
                    exit 1
                fi
            fi
        fi

    done

    return 0
}

boot "$@"
