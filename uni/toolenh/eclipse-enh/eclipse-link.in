#!/bin/bash
    . shlib-import cliboot

    RCSID='$Id: - @VERSION@ @DATE@ @TIME@ - $'
    short_opts="fhqv"
    long_opts="force,help,quiet,verbose,version"
    force=0

function version() {
    parse_id "$RCSID"
    echo "[$BASENAME] Create 'symlink' for eclipse plugins"
    echo "Written by Lenik, Version $rcs_rev, Last updated at $rcs_date"
}

function help() {
    version
    echo
    echo "Syntax: "
    echo "    $0 [OPTION] [--] TARGET LINK-NAME"
    echo
    echo "Options: "
    echo "    -f, --force             Force to overwrite"
    echo "    -q, --quiet             Repeat to get less info"
    echo "    -v, --verbose           Repeat to get more info"
    echo "    -h, --help              Show this help page"
    echo "        --version           Print the version info"
}

function setopt() {
    case "$1" in
        -f|--force)
            force=1;;
        -h|--help)
            help; exit;;
        -q|--quiet)
            LOGLEVEL=$((LOGLEVEL - 1));;
        -v|--verbose)
            LOGLEVEL=$((LOGLEVEL + 1));;
        --version)
            version; exit;;
        *)
            quit "invalid option: $1";;
    esac
}

function main() {
    if [ $# -lt 2 ]; then
        help
        exit
    fi

    target="$1"
    link_name="$2"
    link_file="$link_name.link"
    if [ -e "$link_file" ]; then
        if [ "$opt_force" = 1 ]; then
            echo "$link_file is existed. "
            exit 1
        fi
    fi

    #if [ "$canon" = 1 ]; then
    target=`readlink -f "$target"`
    #fi

    echo "path=$target" >"$link_file"
}

boot "$@"
