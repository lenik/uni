#!/bin/bash
# master-file

. shlib-import cliboot

install -d -o jetty -g jetty -m 4775 @userdir@
install -d -o jetty -g jetty -m 4775 @databasedir@

_log1 "Configure Jetty"

lineconf -tm "  Set default port to 3008" \
    @sysconfdir@/default/jetty jetty::port \
    "JETTY_PORT=3008"

lineconf -tm "  Load jetty-plus.xml" \
    @jettyconfdir@/jetty.conf load::jetty-plus \
    "@jettyconfdir@/jetty-plus.xml"

lineconf -tm "  Load env-appserver.xml" \
    @jettyconfdir@/jetty.conf load::env-appserver \
    "@jettyconfdir@/env-appserver.xml"

lineconf -tm "  Load env-derby.xml" \
    @jettyconfdir@/jetty.conf load::env-derby \
    "@jettyconfdir@/env-derby.xml"

lineconf -tm "  Load env-users.xml" \
    @jettyconfdir@/jetty.conf load::env-users \
    "@jettyconfdir@/env-users.xml"

lineconf -tm "  Load env-shutdown.xml" \
    @jettyconfdir@/jetty.conf load::env-shutdown \
    "@jettyconfdir@/env-shutdown.xml"

lineconf -tm "  Load env-mail.xml" \
    @jettyconfdir@/jetty.conf load::env-mail \
    "@jettyconfdir@/env-mail.xml"

exit 0
