#!/bin/bash
    . shlib
    import cliboot
    import findabc

    shopt -s dotglob
    shopt -s nullglob

    RCSID='$Id: - @VERSION@ @DATE@ @TIME@ - $'
    short_opts="hqv"
    long_opts="help,quiet,verbose,version"

    root="$COOLTASK_HOME"
    [ -z "$root" ] && root=~/tasks

function version() {
    parse_id "$RCSID"
    echo "[$BASENAME] List tasks"
    echo "Written by Lenik, Version $rcs_rev, Last updated at $rcs_date"
}

function help() {
    version
    echo
    echo "Syntax: "
    echo "    $0 [OPTION] [--] PREFIX"
    echo
    echo "Options: "
    echo "    -q, --quiet             Repeat to get less info"
    echo "    -v, --verbose           Repeat to get more info"
    echo "    -h, --help              Show this help page"
    echo "        --version           Print the version info"
}

function setopt() {
    case "$1" in
        -h|--help)
            help; exit;;
        -q|--quiet)
            LOGLEVEL=$((LOGLEVEL - 1));;
        -v|--verbose)
            LOGLEVEL=$((LOGLEVEL + 1));;
        --version)
            version; exit;;
        *)
            quit "invalid option: $1";;
    esac
}

function main() {
    root="${root%/}"

    while [ $# -ge 2 ]; do
        if ! root=`findabc -p "$1" "$root"`; then
            die "Failed to find $1 (in $root)"
        fi
        shift
    done

    list "$root" "$1"
}

function list() {
    local dir="$1"
    local prefix="$2"

    for x in "$dir/$prefix"*/; do
        x="${x%/}"
        xdir="${x%/*}"
        xnam="${x##*/}"
        echo "$xnam"

        list "$xdir/$xnam" "$xnam"
    done
}

boot "$@"
