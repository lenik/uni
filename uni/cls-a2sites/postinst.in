#!/bin/bash
# master-file

echo "Configure apache2"
    a2enmod userdir

    a2ensite com.99jsj.lenik-pc
    a2ensite com.99jsj.mirror

    a2reload

function mklocal() {
    local host="$1"
    lineconf -tm "Set as localhost: $host" \
        /etc/hosts @local::$host \
        "127.0.0.1 $host"
}

mklocal lenik-pc.99jsj.com
mklocal   mirror.99jsj.com

exit 0
