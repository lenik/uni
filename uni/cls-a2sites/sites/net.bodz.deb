<VirtualHost *:80>
    ServerName  deb.bodz.net
    ServerAdmin admin@bodz.net

    LogLevel warn
    CustomLog /var/log/apache2/deb_access.log combined
    ErrorLog  /var/log/apache2/deb_error.log

    DocumentRoot /var/lib/dlocal

    <Directory /var/lib/dlocal>
        Options MultiViews Indexes FollowSymLinks
        AllowOverride None
        Order allow,deny
        Allow from all
    </Directory>

</VirtualHost>
