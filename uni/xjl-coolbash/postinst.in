#!/bin/sh

 bashrc=@sysconfdir@/bash.bashrc
 a_init=@sysconfdir@/bash_aliases
skel_rc=@sysconfdir@/skel/.bashrc

echo "Set permission of sudoer files"

    chmod 440 @DESTDIR@@sudoersdir@/keep-hist

echo -n "Add $a_init to start up... "
    if lineconf -et $bashrc \
            COOLBASH::a_init "if [ -f $a_init ]; then . $a_init; fi"
    then
        echo Done
    else
        echo Skipped
    fi

echo -n "Remove HIST-overrides from $skel_rc... "
    if [ -f $skel_rc ]; then
        tmp=/tmp/bashrc-repl-$$.$RANDOM
        egrep -v "\bHIST(\w+)\b" $skel_rc >$tmp
        if ! cmp -s $skel_rc $tmp; then
            mv -f $tmp $skel_rc
            echo Done
        else
            rm -f $tmp
            echo Skipped
        fi
    else
        echo Skipped
    fi
