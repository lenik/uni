#!/bin/bash

# (bash for $RANDOM)

if [ -z "$MAKE" ]; then
    MAKE=@bindir@/make-color
fi

if [ ! -f ./configure ]; then
    echo Autoreconf2...
    autoreconf2 -is
fi

if [ ! -f Makefile ] && [ -x ./configure ]; then
    echo Generate Makefile by autotools...
    if ./configure; then
        if [ -f Makefile ]; then
            echo Done
        else
            echo ./configure success but no Makefile generated.
            echo Aborted.
            exit 1
        fi
    else
        echo No Makefile and do not know how to create it.
        exit 1
    fi
fi

if dist_tgz=`maketest '@echo $(PACKAGE_NAME)-$(PACKAGE_VERSION).tar.gz'`; then
    echo Guess the generated dist file is $dist_tgz
fi

$MAKE -s dist

if [ -z "$dist_tgz" ]; then
    echo Dist file is unknown, find the first .tar.gz archive:
    for tgz in *.tar.gz; do
        if [ -f "$tgz" ]; then
            echo Found: $tgz
            dist_tgz="$tgz"
            break
        fi
    done
    if [ -z "$dist_tgz" ]; then
        echo Not found anything.
        exit 1
    fi
fi

echo
echo "Distribution contents (Re-sorted): "
tar tzf $dist_tgz | LC_COLLATE=C sort

tmpdestdir=/tmp/destdir.$$.$RANDOM
rm -fR $tmpdestdir

echo Install to temporary destdir $tmpdestdir:
if $MAKE -s install DESTDIR=$tmpdestdir; then
    tree $tmpdestdir
else
    echo Failed to install.
fi
for f in "$@"; do
    echo "Check file $f: "
    find $tmpdestdir -name $f -exec sh -c "echo In install: {}; cat {} | sed 's/^/> /'; echo" \;
    tar tzf $dist_tgz | grep "/$f\$" | xargs -l -I {} \
        sh -c "echo In tarball: {}; tar xzf $dist_tgz -O {} | sed 's/^/> /'; echo"
    echo
done

echo Cleanup temp destdir.
rm -fR $tmpdestdir
