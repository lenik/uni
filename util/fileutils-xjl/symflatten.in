#!/bin/bash
    : ${RCSID:=$Id: - @VERSION@ @DATE@ @TIME@ - $}
    : ${PROGRAM_TITLE:=Dereference of symlinks}
    : ${PROGRAM_SYNTAX:=[OPTIONS] [--] FILES}

    . shlib-import cliboot
    option -f --force       "Error continue, exit 1 if any error"
    option -q --quiet
    option -v --verbose
    option -h --help
    option    --version

    force=0

function setopt() {
    case "$1" in
        -f|--force)
            force=1;;
        -h|--help)
            help $1; exit;;
        -q|--quiet)
            LOGLEVEL=$((LOGLEVEL - 1));;
        -v|--verbose)
            LOGLEVEL=$((LOGLEVEL + 1));;
        --version)
            version; exit;;
        *)
            quit "invalid option: $1";;
    esac
}

function main() {

    err=0
    CP="cp --preserve --"

    for f in "$@"; do
        if [ -h "$f" ]; then

            tmp="$f.deref-$$-$RANDOM"
            if [ -d "$f" ]; then
                _log2 "Deref $f/"
                $CP -R "$f" "$tmp"
            else
                _log2 "Deref $f"
                $CP "$f" "$tmp"
            fi
            cp_err=$?
            if [ $cp_err != 0 ]; then
                err=1
            else
                _log2 "  remove"
                if rm -fR "$f"; then
                    _log2 "  rename"
                    if mv "$tmp" "$f"; then
                        _log2 "  done"
                    else
                        _log2 "  can't rename, leave the tmp file $tmp"
                    fi
                else
                    _log2 "  can't remove, leave the tmp file $tmp"
                fi
            fi
        fi

        if [ $err = 1 ] && [ $force != 1 ]; then
            break
        fi
    done

    return $err
}

boot "$@"
