#!/bin/bash
    : ${RCSID:=$Id: - @VERSION@ @DATE@ @TIME@ - $}
    : ${PACKAGE:=@PACKAGE@}
    : ${PROGRAM_TITLE:=}
    : ${PROGRAM_SYNTAX:=[OPTIONS] [--] ...}

    . shlib-import cliboot
    option -d --index-dir =DIR      "Specify the index directory, default searh the closest by-date/."
    option -p --date-path           "Use y/y-m/y-m-d date path. (default)"
    option -f --force               "Overwrite existing files"
    option -q --quiet
    option -v --verbose
    option -h --help
    option    --version

    ((LOGLEVEL++))

    opt_indexDir=
    opt_datePath=1
    opt_force=0

function setopt() {
    case "$1" in
        -d|--by-date-dir)
            opt_indexDir="$2";;
        -p|--date-path)
            opt_datePath=1;;
        -f|--force)
            opt_force=1;;
        -h|--help)
            help $1; exit;;
        -q|--quiet)
            LOGLEVEL=$((LOGLEVEL - 1));;
        -v|--verbose)
            LOGLEVEL=$((LOGLEVEL + 1));;
        --version)
            show_version; exit;;
        *)
            quit "invalid option: $1";;
    esac
}

function main() {
    mvopts=()
    if [ "$opt_force" != 1 ]; then
        mvopts+=(-n)
    fi
    if [ -z "$opt_indexDir" ]; then
        if ! opt_indexDir=$(find-in-pars "$PWD" by-date index); then
            quit "can't find by-date dir."
        fi
        _log1 "index directory: $opt_indexDir"
    fi

    local file dir base
    local date y m d
    for file in "$@"; do
        if [ ! -e "$file" ]; then
            _error "not existed: $file"
            continue
        fi

        dir="${file%/*}"
        base="${file##*/}"
        if [ "$file" = "$base" ]; then
            dir=.
        fi

        case "$base" in
            of_*)
                if [ -L "$file" ]; then
                    _log2 "ignore symlink $file"
                    continue
                fi
                ;;
        esac

        if [ "$opt_datePath" = 0 ]; then
            if [ -z "$opt_indexDir" ]; then
                if is-date "$base"; then
                    _log2 "ignore (the target) date dir $file"
                    continue
                fi
            fi
        fi

        date=$(stat -c%y "$file")
            # yyyy-mm-dd hh:mm:ss.nnnn ...
            y=${date:0:4}
            m=${date:5:2}
            d=${date:8:2}

        local outdir="$dir"
            if [ -n "$opt_indexDir" ]; then
                outdir="$opt_indexDir"
            fi
            if [ "$opt_datePath" = 1 ]; then
                outdir="$outdir/$y/$y-$m/$y-$m-$d"
            else
                outdir="$outdir/$y-$m-$d"
            fi

        if [ ! -d "$outdir" ]; then
            _log2 "create dir $outdir"
            if ! mkdir -p "$outdir"; then
                _error "  failed to create $outdir."
                continue
            fi
        fi

        _log2 "move $file to $outdir/"
        if ! mv "${mvopts[@]}" "$file" "$outdir"/; then
            _error "failed to move $file: error $?, $!"
        elif [ -e "$file" ]; then
            _error "file is already existed: $file"
        fi
    done
}

function find-in-pars() {
    local start="$1"
    shift

    local arg
    if [ ! -d "$start" ]; then
        return 1
    fi
    for arg in "$@"; do
        if [ -e "$start/$arg" ]; then
            echo "$start/$arg"
            return 0
        fi
    done
    local par="${start%/*}"
    if [ "$par" = "$start" ]; then
        return 1
    fi
    find-in-pars "$par" "$@"
}

function is-date() {
    local arg="$1"
    local y m d

    y="${arg%%-*}"
    [ "$y" = "$arg" ] && return 1 # no dash
    is-num "$y" || return 10
    arg="${arg#*-}"

    m="${arg%%-*}"
    [ "$m" = "$arg" ] && return 2 # only 1 dash
    is-num "$m" || return 20
    arg="${arg#*-}"

    d="${arg%-*}"
    [ "$d" = "$arg" ] || return 3 # too many dashes
    is-num "$d" || return 30

    return 0
}

function is-num() {
    local arg="$1"
    if [ -z "$arg" ]; then
        return 1
    fi
    arg="${arg//[0123456789]/}"
    test -z "$arg"
}

boot "$@"
