#!/bin/bash
    : ${RCSID:=$Id: - @VERSION@ @DATE@ @TIME@ - $}
    : ${PROGRAM_TITLE:="MATE desktop switcher"}
    : ${PROGRAM_SYNTAX:="[OPTIONS] [--] [on]/off"}

    . shlib-import cliboot
    option -p --priority =NUM "Larger value for higher priority"
    option -q --quiet       "Repeat to get less info"
    option -v --verbose     "Repeat to get more info"
    option -h --help        "Show this help page"
    option    --version     "Print the version info"

    priority=100

function setopt() {
    case "$1" in
        -p|--priority)
            priority=$(($2 + 0));;
        -h|--help)
            help $1; exit;;
        -q|--quiet)
            LOGLEVEL=$((LOGLEVEL - 1));;
        -v|--verbose)
            LOGLEVEL=$((LOGLEVEL + 1));;
        --version)
            version; exit;;
        *)
            quit "invalid option: $1";;
    esac
}

function main() {
    if [ -n "$1" ]; then
        case "$1" in
            on|ON)
                priority=1000;;
            off|OFF)
                priority=0;;
            *)
                quit "Bad switch-state, must be on or off: $1";;
        esac
    fi

    update-alternatives --install \
        /usr/bin/x-window-manager \
        x-window-manager \
        /usr/bin/mate-wm "$priority"

    update-alternatives --install \
        /usr/bin/x-session-manager \
        x-session-manager \
        /usr/bin/mate-session "$priority"
}

boot "$@"
