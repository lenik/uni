#!/bin/bash
    : ${RCSID:=$Id: - @VERSION@ @DATE@ @TIME@ - $}
    : ${PROGRAM_TITLE:=}
    : ${PROGRAM_SYNTAX:=[PREFIX=$PREFIX] $0 [OPTION] [--] <file.exe>...}
    : ${PREFIX:=/usr}

    . shlib-import cliboot
    option -q --quiet       "Repeat to get less info"
    option -v --verbose     "Repeat to get more info"
    option -h --help        "Show this help page"
    option    --version     "Print the version info"

function setopt() {
    case "$1" in
        -h|--help)
            help $1; exit;;
        -q|--quiet)
            LOGLEVEL=$((LOGLEVEL - 1));;
        -v|--verbose)
            LOGLEVEL=$((LOGLEVEL + 1));;
        --version)
            version; exit;;
        *)
            quit "invalid option: $1";;
    esac
}

function main() {
    bindir="${PREFIX}/bin"
    if [ ! -d "$bindir" ]; then
        quit "No such dir: $bindir"
    fi

    for f in "$@"; do
        if [ ! -x "$f" ]; then
            _warn "Skipped non-executable file: $f"
            continue
        fi

        Base="${f##*/}"
        base=`lc -e $Base`
        name="${base%.*}"
        ext="${base##*.}"
        if [ "$ext" != "exe" ]; then
            _warn "Skipped non-exe file: $f"
            continue
        fi

        target="$bindir/$name"
        if ! abs=`readlink -f "$f"`; then
            _error "Failed to resolve file $f"
            continue
        fi

        _log2 Execute: ln -snf "$abs" "$target"
        ln -snf "$abs" "$target"
    done
}

boot "$@"
