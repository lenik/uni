#!/bin/bash
    . shlib-import cliboot

    RCSID='$Id: - @VERSION@ @DATE@ @TIME@ - $'
    short_opts="hqv"
    long_opts="help,quiet,verbose,version"

    export GIT_PAGER=cat

function version() {
    parse_id "$RCSID"
    echo "[$BASENAME] Generate Git Changelog"
    echo "Written by Lenik, Version $rcs_rev, Last updated at $rcs_date"
}

function help() {
    version
    echo
    echo "Syntax: "
    echo "    $0 [OPTION] [--] [PATH ...]"
    echo
    echo "Options: "
    echo "    -q, --quiet             Repeat to get less info"
    echo "    -v, --verbose           Repeat to get more info"
    echo "    -h, --help              Show this help page"
    echo "        --version           Print the version info"
}

function setopt() {
    case "$1" in
        -h|--help)
            help; exit;;
        -q|--quiet)
            LOGLEVEL=$((LOGLEVEL - 1));;
        -v|--verbose)
            LOGLEVEL=$((LOGLEVEL + 1));;
        --version)
            version; exit;;
        *)
            quit "invalid option: $1";;
    esac
}

_date=
declare -A author_stat
declare -a commits

function main() {
    while IFS='|' read -r date author mesg ; do

        if [ "$_date" != "$date" ]; then
            commit
            _date="$date"
        fi

        (( author_stat["$author"]++ ))
        commits[ncommit++]="$mesg"

    done < <( git log --no-merges --format="%ad|%an|%s" --date=short "$@" )

    commit
}

function commit() {
    local tab authors author count
    local commit
    if [ -n "$_date" ]; then

        authors=
        while IFS=, read count author; do
            authors="$authors, $author"
        done < <(
                for author in "${!author_stat[@]}"; do
                    echo "${author_stat[$author]},$author"
                done | sort -n -r
            )
        echo -E "[$_date] ${authors#, }"

        for commit in "${commits[@]}"; do
            echo -E "	* $commit"
        done
        echo
    fi
    _date=
    commits=()
    ncommit=0
    author_stat=()
}

boot "$@"
