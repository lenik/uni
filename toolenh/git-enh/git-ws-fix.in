#!/bin/bash
    : ${RCSID:=$Id: - @VERSION@ @DATE@ @TIME@ - $}
    : ${PACKAGE:=@PACKAGE@}
    : ${PROGRAM_TITLE:=Fix whitespace in the Git history}
    : ${PROGRAM_SYNTAX:=[OPTIONS] [--] ...}

    . shlib-import cliboot
    option -q --quiet
    option -v --verbose
    option -h --help
    option    --version

function setopt() {
    case "$1" in
        -h|--help)
            help $1; exit;;
        -q|--quiet)
            LOGLEVEL=$((LOGLEVEL - 1));;
        -v|--verbose)
            LOGLEVEL=$((LOGLEVEL + 1));;
        --version)
            show_version; exit;;
        *)
            quit "invalid option: $1";;
    esac
}

function main() {
    if git rev-parse --quiet --verify $GIT_COMMIT^ >/dev/null
    then
            against=$(map $(git rev-parse $GIT_COMMIT^))
            git reset -q $against -- .
    else
            # Initial commit: diff against an empty tree object
            against=4b825dc642cb6eb9a060e54bf8d69288fbee4904
            git rm --cached -rfq --ignore-unmatch '*'
    fi

    if ! git diff --quiet --full-index $against $GIT_COMMIT; then
        git diff --full-index $against $GIT_COMMIT \
            | git apply --cached --whitespace=fix
    fi
}

boot "$@"
