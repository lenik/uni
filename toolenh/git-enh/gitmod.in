#!/bin/bash
    . shlib-import cliboot

    RCSID='$Id: - @VERSION@ @DATE@ @TIME@ - $'
    short_opts="hqv"
    long_opts="help,quiet,verbose,version"
    LOGLEVEL=1

function version() {
    parse_id "$RCSID"
    echo "[$BASENAME] Git shortcut to submodule"
    echo "Written by Lenik, Version $rcs_rev, Last updated at $rcs_date"
}

function help() {
    version
    echo
    echo "Syntax: "
    echo "    $0 [OPTION] [--] ..."
    echo
    echo "Options: "
    echo "    -q, --quiet             Repeat to get less info"
    echo "    -v, --verbose           Repeat to get more info"
    echo "    -h, --help              Show this help page"
    echo "        --version           Print the version info"
}

function setopt() {
    case "$1" in
        -h|--help)
            help; exit;;
        -q|--quiet)
            LOGLEVEL=$((LOGLEVEL - 1));;
        -v|--verbose)
            LOGLEVEL=$((LOGLEVEL + 1));;
        --version)
            version; exit;;
        *)
            quit "invalid option: $1";;
    esac
}

function main() {
    vcsroot=`vcscmd rootpath .`     || die "Can't find vcs root dir."
        rel=`vcscmd localname .`    || die "Can't determine local name."

    args=()
    narg=0
    for a in "$@"; do
        # Replace [-d dir] with localname.
        if [ -d "$a" ]; then
            _log1 "Expand $a to $rel/$a"
            a="$rel/$a"
        fi
        args[narg++]="$a"
    done

    cd "$vcsroot"
    git submodule "${args[@]}"
}

main "$@"
