#!/bin/bash
    RCSID='$Id: - @VERSION@ @DATE@ @TIME@ - $'
    PROGRAM_TITLE="Convert checked out git repository to a bare one"
    PROGRAM_SYNTAX="[OPTIONS] [--] ..."

    . shlib-import cliboot
    option -q --quiet
    option -v --verbose
    option -h --help
    option    --version

    shopt -s dotglob
    shopt -s nullglob

function setopt() {
    case "$1" in
        -h|--help)
            help $1; exit;;
        -q|--quiet)
            LOGLEVEL=$((LOGLEVEL - 1));;
        -v|--verbose)
            LOGLEVEL=$((LOGLEVEL + 1));;
        --version)
            show_version; exit;;
        *)
            quit "invalid option: $1";;
    esac
}

function main() {
    for d in "$@"; do
        d=`readlink -f "$d"`
        d="${d%/}"

        if [ "${d##*/}" = .git ]; then
            d="${d%/*}"
        fi

        [ ! -d "$d/.git" ] && continue

        (cd "$d"
            for f in *; do
                [ "$f" = '.git' ] && continue
                rm -fR "$f"
            done
        )

        mv "$d/.git"/* "$d"
        rmdir -v "$d/.git"

        # Add .git extension
        if [ "${d%.git}" = "$d" ]; then
            mv -v "$d" "$d.git"
            d="$d.git"
        fi

        git --git-dir="$d" config --bool core.bare true
    done
}

boot "$@"
