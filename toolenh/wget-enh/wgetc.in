#!/bin/bash
    : ${RCSID:=$Id: - @VERSION@ @DATE@ @TIME@ - $}
    : ${PROGRAM_TITLE:="wget with cache support"}
    : ${PROGRAM_SYNTAX:="[OPTIONS] [--] URL(s)"}

    . shlib-import cliboot
    option -m --mode =MODE  "chmod to downloaded file"
    option -f --force       "Invalidate the correspond cache"
    option -q --quiet       "Repeat to get less info"
    option -v --verbose     "Repeat to get more info"
    option -h --help        "Show this help page"
    option    --version     "Print the version info"

    #SUDO="sudo -uwget"
    SUDO=
    umask 000

    : ${WGET:=wget}
    : ${CHMOD:=chmod}
    : ${RM:=rm}
    #if !  WGET=`which wget-wget`;  then WGET=wget;   fi
    #if ! CHMOD=`which wget-chmod`; then CHMOD=chmod; fi
    #if !    RM=`which wget-rm`;    then RM=rm;       fi

    cachedir=@cachedir@
    cachedb=$cachedir/cache.db
    force=
    mode=

function setopt() {
    case "$1" in
        -m|--mode)
            mode=$2;;
        -f|--force)
            force=1;;
        -h|--help)
            help; exit;;
        -q|--quiet)
            LOGLEVEL=$((LOGLEVEL - 1));;
        -v|--verbose)
            LOGLEVEL=$((LOGLEVEL + 1));;
        --version)
            version; exit;;
        *)
            quit "invalid option: $1";;
    esac
}

function main() {

    if [ ! -d $cachedir ]; then
        _log1 "Create cache dir $cachedir"
        $SUDO install -d -o wget -g wget $cachedir
    fi

    for url in "$@"; do

        read md5 _ < <(echo "$url" | md5sum)

        path="$url"
        if [ "${path/:\/\/}" != "$path" ]; then
            path="${path#*://}"
            if [ "${path/\/}" = "$path" ]; then
                path=/
            else
                path="${path#*/}"
            fi
        fi
        path="${path%%\?*}"
        path="${path%%#*}"

        ext="${path##*.}"
        if [ "$ext" = "$path" ]; then
            ext=
        else
            ext=".$ext"
        fi

        hashname="$md5$ext"
        hashfile="$cachedir/$hashname"

        if [ "$force" = 1 ]; then
            $SUDO $RM -f "$hashfile"
        fi

        if [ -f "$hashfile" ]; then
            _log1 "Cache hit."
        else
            if ! http-get "$hashfile" "$url" ; then
                echo "wget failed. " >&2
                exit 1
            fi
            $SUDO lineconf "$cachedb" $md5 "$md5 $url"
        fi

        # always chmod, whether cache hit or not.
        if [ -n "$mode" ]; then
            $SUDO $CHMOD $mode "$hashfile"
        fi

        if [ $LOGLEVEL -le 0 ]; then
            echo "$hashfile"
        else
            echo Cached-File: "$hashfile"
        fi
    done
}

function http-get() {
    local out="$1"
    local url="$2"

    # wget -O $out $url.

    axelopts=()
    axeloptn=0
    if [ $LOGLEVEL -le 0 ]; then
        axelopts[axeloptn++]=-q
    fi

    axel "${axelopts[@]}" -o "$out" "$url"
}

boot "$@"
