#!/bin/bash
    : ${RCSID:=$Id: - @VERSION@ @DATE@ @TIME@ - $}
    : ${PROGRAM_TITLE:="Reload a specific file"}
    : ${PROGRAM_SYNTAX:=[OPTIONS] [--] FILES}

    . shlib-import cliboot
    option -e --error-exit  "Error exit immediately"
    option -q --quiet       "Repeat to get less info"
    option -v --verbose     "Repeat to get more info"
    option -h --help        "Show this help page"
    option    --version     "Print the version info"

    error_exit=0

function setopt() {
    case "$1" in
        -e|--error-exit)
            error_exit=1;;
        -h|--help)
            help; exit;;
        -q|--quiet)
            LOGLEVEL=$((LOGLEVEL - 1));;
        -v|--verbose)
            LOGLEVEL=$((LOGLEVEL + 1));;
        --version)
            version; exit;;
        *)
            quit "invalid option: $1";;
    esac
}

function main() {
    for f in "$@"; do
        f=`readlink -f "$f"`
        if cmdline=`find-prefix -q "$f" "@vimconfdir@/reload.cfg"`; then
            _log1 "Reload $f using $cmdline"
            if bash -c "$cmdline"; then
                _log2 "Reloaded"
            else
                _log2 "Reload failed"
                if [ "$error_exit" = 1 ]; then
                    exit 2
                fi
            fi
        else
            _log1 "Don't know how to reload $f"
            exit 1
        fi
    done
}

boot "$@"
