" vim: set filetype=vim :
"
" Lenik's cool VIM defaults

" Misc
"
set modeline
set modelines=10

filetype plugin on

set t_Co=256
colorscheme torte
:nmap <F7>  :colorscheme koehler<CR>
:nmap <F8>  :colorscheme blue<CR>

" Tab/Space
"
set expandtab
set tabstop=8
set shiftwidth=4
set smartindent
set smarttab

" Buffer Management
"
:nmap <C-S>      :w<CR>
:imap <C-S> <C-O>:w<CR>

" Windows Management
"
:set mousefocus

:map <F4>       :q<CR>
:map <F6>       <C-W>w
:nmap <Tab>     <C-W>w

:nmap -         <C-W>-
:nmap +         <C-W>+
:map -        <C-W>-
:map +        <C-W>+
:map <        <C-W><
:map >        <C-W>>

:nmap <silent> <A-Left>     :wincmd h<CR>
:nmap <silent> <A-Down>     :wincmd j<CR>
:nmap <silent> <A-Up>       :wincmd k<CR>
:nmap <silent> <A-Right>    :wincmd l<CR>

:nmap <silent> h          :wincmd h<CR>
:nmap <silent> j          :wincmd j<CR>
:nmap <silent> k          :wincmd k<CR>
:nmap <silent> l          :wincmd l<CR>

" Paste Raw Texts
"
:nmap <F2>      :set invpaste paste?<CR>
:imap <F2> <C-O>:set invpaste paste?<CR>
:set pastetoggle=<F2>

" Insert
"
:nnoremap <F5>       "=strftime("%y-%m-%d %H:%M:%S ")<CR>P
:inoremap <F5>   <C-R>=strftime("%y-%m-%d %H:%M:%S ")<CR>
:nnoremap <S-F5>     "=strftime("%c ")<CR>P
:inoremap <S-F5> <C-R>=strftime("%c ")<CR>
