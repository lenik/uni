#!/bin/bash
    : ${RCSID:=$Id: - @VERSION@ @DATE@ @TIME@ - $}
    : ${PROGRAM_TITLE:="Convert Raw image to VirtualBox VDI image"}
    : ${PROGRAM_SYNTAX:=[OPTIONS] [--] file.img}

    . shlib-import cliboot
    option -o --output =vdifile "Output to filename different than file.vdi"
    option -q --quiet
    option -v --verbose
    option -h --help
    option    --version

    out=

function setopt() {
    case "$1" in
        -o|--output)
            out="$2";;
        -h|--help)
            help $1; exit;;
        -q|--quiet)
            LOGLEVEL=$((LOGLEVEL - 1));;
        -v|--verbose)
            LOGLEVEL=$((LOGLEVEL + 1));;
        --version)
            version; exit;;
        *)
            quit "invalid option: $1";;
    esac
}

function main() {
    img="$1"
    if [ -z "$img" ]; then
        echo ".img file must be specified. "
        exit 1
    fi

    if [ -n "$2" ]; then
        out="$2"
    elif [ -z "$out" ]; then
        out="${img%.img}"
        out="${out%.IMG}"
        out="$out.vdi"
    fi

    VBoxManage internalcommands convertfromraw "$img" "$out" --format vdi
}

boot "$@"
