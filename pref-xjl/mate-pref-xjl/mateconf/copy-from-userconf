#!/bin/bash

for path in "$@"; do
    if [ "${path%/%mateconf.xml}" = "$path" ]; then
        f="$path/%mateconf.xml"
    else
        f="$path"
    fi
    userf="$HOME/.mateconf/$f"
    if [ ! -f "$userf" ]; then
        echo "File $userf isn't existed. "
    else
        echo "Copy $userf"
        cp "$userf" "$f"
    fi
done
