#!/bin/bash
    . shlib-import cliboot

    RCSID='$Id: - @VERSION@ @DATE@ @TIME@ - $'
    short_opts="p:hqv"
    long_opts="priority:,help,quiet,verbose,version"
    priority=100

function version() {
    parse_id "$RCSID"
    echo "[$BASENAME] "
    echo "Written by Lenik, Version $rcs_rev, Last updated at $rcs_date"
}

function help() {
    version
    echo
    echo "Syntax: "
    echo "    $0 [OPTION] [--] [on]/off"
    echo
    echo "Options: "
    echo "    -p, --priority=NUM      Larger value for higher priority"
    echo "    -q, --quiet             Repeat to get less info"
    echo "    -v, --verbose           Repeat to get more info"
    echo "    -h, --help              Show this help page"
    echo "        --version           Print the version info"
}

function setopt() {
    case "$1" in
        -p|--priority)
            priority=$(($2 + 0));;
        -h|--help)
            help; exit;;
        -q|--quiet)
            LOGLEVEL=$((LOGLEVEL - 1));;
        -v|--verbose)
            LOGLEVEL=$((LOGLEVEL + 1));;
        --version)
            version; exit;;
        *)
            quit "invalid option: $1";;
    esac
}

function main() {
    if [ -n "$1" ]; then
        case "$1" in
            on|ON)
                priority=1000;;
            off|OFF)
                priority=0;;
            *)
                quit "Bad switch-state, must be on or off: $1";;
        esac
    fi

    update-alternatives --install \
        /usr/bin/x-window-manager \
        x-window-manager \
        /usr/bin/mate-wm "$priority"

    update-alternatives --install \
        /usr/bin/x-session-manager \
        x-session-manager \
        /usr/bin/mate-session "$priority"
}

boot "$@"
