sub _help {
    &_version;
    print "\nSyntax: \n    $0 [OPTION] [--] FILES\n", <<'EOM';

Common options:
    -t, --type=TYPE         Specify the file type, override file extension
    -q, --quiet             Repeat to get less info
    -v, --verbose           Repeat to get more info
    -h, --help              Show this help page
        --version           Print the version info
EOM
}

exit (_boot or 0);

sub _main {
    if (scalar(@ARGV) == 0) {
        *IN = *STDIN;
        process_C;
    } else {
        for (@ARGV) {
            my $ext = $_;
            $ext =~ s/\.in$//;
            $ext =~ s/^.*\.//;

            my $lang = $EXTMAP{$ext};
            if (defined $lang) {
                _log2 "Determined lang of $_: $lang";
            } else {
                die "Unknown file type: $_";
            }

            open(IN, "<$_") or die "Failed to open $_: $!";
            process_C;
            close IN;
        }
    }
}

sub process_C {
    while (<IN>) {
        # KEYWORD+ id '(' ARGS ')' '{' ...
        if (/^(\s*) (\w+\s+)+ (\w+) \s* \(\s* (.*?) \s*\) \s* \{/x) {
            my $indent = $1;
            my $keywords = $2;  # LTRIM
            my $fn = $3;        # WORD
            my $args = $4;      # TRIM

            # my $staticp = $keywords =~ /\bstatic\b/;
            my $fn_desc = to_desc $fn;

            print "${indent}/**\n";
            print "${indent} * The $fn_desc function.\n";
            print "${indent} *\n";
            for (split(/,\s*/, $args)) {
                die "Illegal argument spec $_"
                    unless /^\s* (.+?) \s* (\w+)$/x;

                my $arg_type = $1;
                my $arg_name = $2;
                my $arg_desc = to_desc $arg_name;
                my $pointer_p = $arg_type =~ /\*/;
                my $arg_0 = $pointer_p ? 'NULL' : '0';

                print "${indent} * \@param $arg_name\n";
                print "${indent} *     Specify the $arg_desc, default is $arg_0.\n";
            }
            print "${indent} */\n";
        }
        print;
    }
}

=head1 DIAGNOSTICS

(No Information)

=cut
sub to_desc($) {
    for (@_) {
    # break camel-id to words
        s/([A-Z]+[a-z])/ \1/g;
        s/([A-Z]+)([A-Z])/\1 \2/g;
        s/_/ /g;
        s/^\s+//;
        
        my $buf = '';
        for (split(/\s+/, $_)) {
            $buf .= ' ' if ($buf ne '');
            $_ = lc($_) unless /^[A-Z]+$/;
            $buf .= $_;
        }
        #$buf =~ s/^\s+//;
        #$buf =~ s/\s+$//;
        return $buf;
    }
}

