#!/bin/bash
    : ${RCSID:=$Id: - @VERSION@ @DATE@ @TIME@ - $}
    : ${PROGRAM_TITLE:="Locate a perl module"}
    : ${PROGRAM_SYNTAX:="[OPTIONS] [--] LIB-NAMES"}

    . shlib-import cliboot
    option -I --include =DIR "Add include dir"
    option -q --quiet       "Repeat to get less info"
    option -v --verbose     "Repeat to get more info"
    option -h --help        "Show this help page"
    option    --version     "Print the version info"

    INC=(`perl -V | grep -A100 '@INC:' | headrm -1`)

function setopt() {
    case "$1" in
        -I|--include)
            INC[${#INC[@]}]="$2";;
        -h|--help)
            help $1; exit;;
        -q|--quiet)
            LOGLEVEL=$((LOGLEVEL - 1));;
        -v|--verbose)
            LOGLEVEL=$((LOGLEVEL + 1));;
        --version)
            version; exit;;
        *)
            quit "invalid option: $1";;
    esac
}

function search() {
    local pkgname="$1"
    local count=0
    resf="${pkgname//:://}"
    for dir in "${INC[@]}"; do
        if [ -e "$dir/$resf.pm" ]; then
            echo "$dir/$resf.pm"
            ((count++))
        elif [ -e "$dir/$resf/" ]; then
            echo "$dir/$resf/"
            ((count++))
        fi
    done
    return $((count == 0))
}

function main() {
    if [ $# = 0 ]; then
        while read -p "Enter the package name: " pkgname; do
            search "$pkgname"
        done
    else
        for pkgname in "$@"; do
               search "$pkgname"
        done
    fi
}

boot "$@"
