#!/bin/bash
    : ${RCSID:=$Id: - @VERSION@ @DATE@ @TIME@ - $}
    : ${PROGRAM_TITLE:="Vim thru xml2/2xml"}
    : ${PROGRAM_SYNTAX:="[OPTIONS] [--] FILES"}

    . shlib-import cliboot
    option -r --reformat    "Reformat after xml2/2xml transforms"
    option -q --quiet
    option -v --verbose
    option -h --help
    option    --version

    reformat=

function setopt() {
    case "$1" in
        -r|--reformat)
            reformat=1;;
        -h|--help)
            help $1; exit;;
        -q|--quiet)
            LOGLEVEL=$((LOGLEVEL - 1));;
        -v|--verbose)
            LOGLEVEL=$((LOGLEVEL + 1));;
        --version)
            show_version; exit;;
        *)
            quit "invalid option: $1";;
    esac
}

function main() {
    tmp=`tempfile`
    for f in "$@"; do
        xml2 <"$f" >$tmp
        if vi $tmp; then
            if [ "$reformat" = 1 ]; then
                2xml <$tmp | xmlindent -f -nbe >"$f"
            else
                2xml <$tmp >"$f"
            fi
        fi
    done
}

boot "$@"
