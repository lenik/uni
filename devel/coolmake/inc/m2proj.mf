# vim: set ft=make :

selfdir := $(dir $(lastword $(MAKEFILE_LIST)))
include $(selfdir)/base.mf

libdir = lib

bin_files += \
    $(libdir)/ \
    target/

src_excludes = \
    target

bin_PRE += update-lib
update-lib:
	rm -f .classpath.main .classpath.test
	mkdir -p $(libdir)
	rm -f $(libdir)/*
	mjpl -t -v --deps 2>&1 \
	    | grep -Po '/.*\.jar' \
	    | while read f; do cp -pnv "$$f" $(libdir)/; done

