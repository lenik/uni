#!/bin/bash
    : ${RCSID:=$Id: - @VERSION@ @DATE@ @TIME@ - $}
    : ${PACKAGE:=@PACKAGE@}
    : ${PROGRAM_TITLE:=}
    : ${PROGRAM_SYNTAX:=[OPTIONS] [--] ...}

    . shlib-import cliboot
    #option -I --include-dir =DIR "Add include search dir"
    option -i --include     "Expand include directives"
    option -s --strip       "Remove empty and comment lines"
    option -o --obfuscate   "Try to obfuscate the source"
    option -p --private     "Build private merged Makefile.am"
    option -q --quiet
    option -v --verbose
    option -h --help
    option    --version

    opt_include=
    opt_strip=0
    opt_private=

function setopt() {
    case "$1" in
        -i|--include)
            opt_include=1;;
        -s|--strip)
            opt_strip=1;;
        -o|--obfuscate)
            opt_strip=ob;;
        -p|--private)
            opt_private=1;;
        -h|--help)
            help $1; exit;;
        -q|--quiet)
            LOGLEVEL=$((LOGLEVEL - 1));;
        -v|--verbose)
            LOGLEVEL=$((LOGLEVEL + 1));;
        --version)
            show_version; exit;;
        *)
            quit "invalid option: $1";;
    esac
}

function main() {
    local am
    local lines=()
    local ln

    for am in "$@"; do
        [ -f "$am" ] || quit "Bad file: $am"
        case "$opt_strip" in
            1)
                expand "$am" 0 | sed -e 's/ \+/ /';;
            ob)
                expand "$am" 0;;
            *)
                expand "$am" 0;;
        esac
    done
}

spaces=(' ' '  ' '   ' '    ' '     ' '      ' '       ' '        ')

function expand() {
    local file="$1"
    local level="$2"
    local lines=()
    local incfile

    if [ "$level" = 0 ] && [ "$opt_private" = 1 ]; then
        echo "# This file is generated by amexpand $rcs_rev, at `date`"
      [ -n "$opt_strip" ] &&
        echo "# (stripped version)"
        echo "# Please don't edit this file, or you will lose all your modification."
    fi

    readarray -t lines <"$file"
    for ln in "${lines[@]}"; do
        case "$ln" in
        '')
            case "$opt_strip" in
            1) continue;;
            ob) [ $((RANDOM % 2)) = 1 ] || continue;;
            esac;;

        \#*)
            [ -n "$opt_strip" ] && continue;;

        'include '*)
            if [ "$opt_include" = 1 ]; then
                read _include incfile < <(echo "$ln")

                if [ -n "$opt_private" ]; then
                    case "$incfile" in
                        */libauto/changelog.am)
                            continue;;
                        */libauto/help2man.am)
                            continue;;
                        */libauto/rst.am)
                            continue;;
                        */libauto/subst-*.am)
                            continue;;
                        .*.am)          # Local private include files
                            continue;;
                    esac
                fi

                # eval makefile vars...
                incfile="${incfile//\$(top_srcdir)/.}"

                _log2 "Include $incfile..."
                expand "$incfile" $((level + 1))
                continue
            fi
            ;;
        esac

        # Everything else...
        if [ "$opt_strip" = 'ob' ]; then
            rnd=$((RANDOM % 8))
            spc="${spaces[rnd]}"
            ln="${ln//    /$spc}"
        fi
        echo "$ln"
    done
}

boot "$@"
