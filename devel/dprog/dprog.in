#!/bin/bash
    . shlib-import cliboot

    RCSID='$Id: - @VERSION@ @DATE@ @TIME@ - $'

    dopts=()
    doptn=0
    appargs=()
    appargn=0

    always=
    inplace=
    compiler=dmd

    DPROGRC=@sysconfdir@/dprog.rc
    if [ -f $DPROGRC ]; then
        . $DPROGRC
    fi

function version() {
    parse_id "$RCSID"
    echo "[$BASENAME] Auto compile dmd script and run"
    echo "Written by Lenik, Version $rcs_rev, Last updated at $rcs_date"
}

function help() {
    version
    echo
    echo "Syntax: "
    echo "    $0 [OPTION] [--] ..."
    echo
    echo "Options: "
    echo "    -B, --always-make     Always compile"
    echo "    -i, --inplace         Compile to hidden file in the same dir, instead of tmpdir"
    echo "        --dmd             Compile by dmd"
    echo "        --dmd-run         Run the script using dmd-run"
    echo "        --gdc             Compile by gdc"
    echo "    -q, --quiet           Repeat to get less info"
    echo "    -v, --verbose           Repeat to get more info"
    echo "    -h, --help              Show this help page"
    echo "        --version           Print the version info"
    echo "  * (all other options are passed to the dmd compiler)"
}

function setopts() {
    no_app_args="$1"
    shift

    endofoptions=0
    for a in "$@"; do
        if [ "$endofoptions" = 1 ]; then
            app_args[app_argn++]="$a"
            continue
        fi

        case "$a" in
            -B|--always-make)
                always=1;;
            -i|--inplace)
                inplace=1;;
            --dmd)
                compiler=dmd;;
            --dmd-run)
                compiler=dmd-run;;
            --gdc)
                compiler=gdc;;
            -h|--help)
                help; exit;;
            -q|--quiet)
                LOGLEVEL=$((LOGLEVEL - 1));;
            -v|--verbose)
                LOGLEVEL=$((LOGLEVEL + 1));;
            --version)
                version; exit;;
            --)
                endofoptions=1;;
            #-run)
            #    # -run is always used. so let's skip it and ...
            #    endofoptions=1;;
            -*)
                dopts[doptn++]="$a";;
            *)
                if [ "$no_app_args" = 1 ]; then
                    dopts[doptn++]="$a"
                else
                    app_args[app_argn++]="$a"
                    endofoptions=1
                fi;;
        esac
    done
}

function boot() {
    expand_first=0

    if [ $# != 0 ]; then
        if [ ! -f "$1" ]; then
            if [ "${1:0:1}" = '-' ]; then
                expand_first=1
            fi
        fi
    fi

    if [ "$expand_first" = 1 ]; then
        setopts 1 $1
        shift
    fi

    setopts 0 "$@"

    case "$compiler" in
        dmd)
            DMD=`which dmd` || quit "Can't find dmd";;
        dmd-run)
            DMD=`which dmd` || quit "Can't find dmd";;
        gdc)
            GDC=`which gdc` || quit "Can't find gdc";;
        *)
            quit "Compiler isn't supported: $compiler";;
    esac

    main "${app_args[@]}"
}

function main() {
    d_file="$1"; shift
    [ -f "$d_file" ] || quit "Source file $d_file isn't existed"

    if [ "$compiler" = 'dmd-run' ]; then
        _log2 "Execute: $DMD ${dopts[@]} -run '$d_file' $*"
        $DMD "${dopts[@]}" -run "$d_file" "$@"
        return
    fi

    d_dir="${d_file%/*}"
    d_base="${d_file##*/}"
    if [ "$d_dir" = "$d_file" ]; then
        d_dir=.
        d_base="$d_file"
    fi

    d_name="${d_base%.d}"
    if [ "$d_name" = "$d_base" ]; then
        quit "Source file must have extension .d: $d_base"
    fi

    if [ "$inplace" = 1 ]; then
        d_exe="$d_dir/.$d_name.bin"
    else
        outdir=/tmp/compiled.d
        mkdir -p "$outdir"
        # d_exe=`tempfile -d "$outdir" -p "$d_name" -s .bin`
        d_exe="$outdir/$d_name.bin"
    fi

    if [ ! -f "$d_exe" ] || \
            [ "$always" = 1 ] || \
            [ "$d_file" -nt "$d_exe" ]; then
        case "$compiler" in
            dmd)
                _log2 "Compile:" \
                $DMD "${dopts[@]}" -of"$d_exe" "$d_file"
                $DMD "${dopts[@]}" -of"$d_exe" "$d_file" ||
                    quit "Failed to compile."
                ;;
            gdc)
                _log2 "Compile:" \
                $GDC "${dopts[@]}" -o "$d_exe" "$d_file"
                $GDC "${dopts[@]}" -o "$d_exe" "$d_file" ||
                    quit "Failed to compile."
                ;;
            *)
                quit "Compiler isn't supported: $compiler";;
        esac
    fi

    _log2 "Execute:" "$d_exe" "$@"
    "$d_exe" "$@"
}

boot "$@"
