<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>
   <extension
         id="net.bodz.pooh.applications"
         point="org.eclipse.core.runtime.applications">
      <application
            cardinality="singleton-global"
            thread="main"
            visible="true">
         <run
               class="net.bodz.pooh.ui.QuickPoohApplication">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.core.contenttype.contentTypes">
      <content-type
            base-type="org.eclipse.jdt.core.javaSource"
            default-charset="utf-8"
            file-extensions="xjl,l,y"
            id="javaSourceEmbedded"
            name="Java Source Embedded File"
            priority="normal">
      </content-type>
   </extension>

   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="net.bodz.pooh.ui.QuickPoohPerspective"
            id="net.bodz.pooh.ui.QuickPoohPerspective"
            name="Quick Pooh">
      </perspective>
   </extension>

   <extension
         point="org.eclipse.ui.views">
      <category
            name="Quick Pooh Category"
            id="net.bodz.pooh.views.QuickPoohCategory">
      </category>
      <view
            name="Debug Console"
            icon="icons/sample.gif"
            category="net.bodz.pooh.views.QuickPoohCategory"
            class="net.bodz.pooh.views.DebugConsole"
            id="net.bodz.pooh.views.DebugConsole">
      </view>
   </extension>
   <extension
         point="org.eclipse.help.contexts">
      <contexts
            file="contexts.xml">
      </contexts>
   </extension>
   <extension
         point="org.eclipse.ui.editors">
      <editor
            default="false"
            extensions="txt"
            id="npp"
            launcher="net.bodz.pooh.editors.NppLauncher"
            name="Notepad++">
         <contentTypeBinding
               contentTypeId="net.bodz.pooh.javaSourceEmbedded">
         </contentTypeBinding>
      </editor>
   </extension>

</plugin>
